{{ header }}{{ column_left }}
<div id="content" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1><i class="fa fa-credit-card text-success"></i> {{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-cid"><span data-toggle="tooltip" title="{{ help_cid }}">{{ entry_cid }}</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_kekspay_cid" value="{{ payment_kekspay_cid }}" placeholder="{{ entry_cid }}" id="input-cid" class="form-control" />
                        {% if error_cid %}
                            <span class="error text-danger">{{ error_cid }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-tid"><span data-toggle="tooltip" title="{{ help_tid }}">{{ entry_tid }}</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_kekspay_tid" value="{{ payment_kekspay_tid }}" placeholder="{{ entry_tid }}" id="input-tid" class="form-control" />
                        {% if error_tid %}
                            <span class="error text-danger">{{ error_tid }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-token"><span data-toggle="tooltip" title="{{ help_token}}">{{ entry_token }}</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_kekspay_token" value="{{ payment_kekspay_token }}" placeholder="{{ entry_token }}" id="input-token" class="form-control"  readonly/>
                        {% if error_token %}
                            <span class="error text-danger">{{ error_token }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-password"><span data-toggle="tooltip" title="{{ help_password }}">{{ entry_password }}</span></label>
                    <div class="col-sm-10">
                        <input type="password" name="payment_kekspay_password" value="{{ payment_kekspay_password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
                        {% if error_password  %}
                            <span class="error text-danger"> {{ error_password }}</span>
                        {% endif %}
                    </div>
                </div>

                {#<div class="form-group">
                    <label class="col-sm-2 control-label" for="input-shop-title">{{ entry_callback }}</label>
                    <div class="col-sm-10">
                        <p>{{ help_callback }} <a href="mailto:kekspay@erstebank.hr">{{ help_callback_contact }}</a></br><code>{{ callback }}</code></p>
                    </div>
                </div>#}

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-shop-title">{{ entry_shop_title }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_kekspay_shop_title" value="{{ payment_kekspay_shop_title }}" id="input-shop-title" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-callback"><span data-toggle="tooltip" title="{{ help_entry_callback }}">{{ entry_callback }}</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="callback" value="{{ callback }}" id="input-callback" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-test">{{ entry_test }}</label>
                    <div class="col-sm-10">
                        <select name="payment_kekspay_test" id="input-test" class="form-control">
                            {% if payment_kekspay_test == '0' %}
                                <option value="0" selected="selected">{{ text_off }}</option>
                            {% else %}
                                <option value="0">{{ text_off }}</option>
                            {% endif %}
                            {% if payment_kekspay_test == '100' %}
                                <option value="100" selected="selected">{{ text_successful }}</option>
                            {% else %}
                                <option value="100">{{ text_successful }}</option>
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_entry_total }}">{{ entry_total }}</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_kekspay_total" value="{{ payment_kekspay_total }}" id="input-total" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                    <div class="col-sm-10">
                        <select name="payment_kekspay_order_status_id" id="input-order-status" class="form-control">
                            {% for order_status in order_statuses %}
                                {% if order_status.order_status_id == payment_kekspay_order_status_id %}
                                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                {% else %}
                                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                    <div class="col-sm-10">
                        <select name="payment_kekspay_geo_zone_id" id="input-geo-zone" class="form-control">
                            <option value="0">{{ text_all_zones }}</option>
                            {% for geo_zone in geo_zones %}
                                {% if geo_zone.geo_zone_id == payment_kekspay_geo_zone_id %}
                                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                {% else %}
                                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                    <div class="col-sm-10">
                        <select name="payment_kekspay_status" id="input-status" class="form-control">
                            {% if payment_kekspay_status %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-sort">{{ entry_sort_order }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_kekspay_sort_order" value="{{ payment_kekspay_sort_order }}" id="input-sort" class="form-control" />
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
{{ footer }}